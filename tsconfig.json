{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "lib": [
      "es2022"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "paths": {
      "@types": [
        "types"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "strict": true,
    "target": "ES2022"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
